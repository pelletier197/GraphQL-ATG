{
  "name": "graphql-atg",
  "version": "1.0.0",
  "description": "GraphQL Automated Test Generator (ATG) generates automatic tests for you API by fetching the GraphQL introspection schema and by automatically generating requests for that API",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/pelletier197/graphql-atg",
  "license": "MIT",
  "keywords": [],
  "type": "module",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig-build.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" \"spec/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" \"spec/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest",
    "watch:build": "tsc -p tsconfig-build.json -w",
    "watch:test": "jest --watch",
    "cov": "jest --collect-coverage",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "clean": "rm -r build coverage"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@types/node": "^16.9.1",
    "deasync": "^0.1.23",
    "graphql-formatter": "^1.0.3",
    "graphql-query-compress": "^1.2.4",
    "graphql-request": "^3.5.0",
    "lodash": "^4.17.21",
    "prettier": "^2.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/omit-deep-lodash": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "apollo-server": "^3.3.0",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "find-free-ports": "^3.0.0",
    "gh-pages": "^3.1.0",
    "graphql": "^15.5.3",
    "jest": "^27.1.1",
    "npm-run-all": "^4.1.5",
    "omit-deep-lodash": "^1.1.5",
    "open-cli": "^6.0.1",
    "standard-version": "^9.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "jest": {
    "verbose": true,
    "maxWorkers": 1,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@test/(.*)$": "<rootDir>/spec/lib/$1"
    },
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
